@using Certification.Core
@model Certifications

<div class="fa-cpanel panel-default">
    <div class="panel-heading">
        <h3>@Model.Group</h3>
    </div>
    <div class="panel-body">
        <span>Name of professor: @Model.NameOfProfessor</span>
        <span>Date of certification: @Model.DateOfCertification</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-lg"
           asp-page="./Detail" asp-route-certificationId="@Model.Id">
            <i class="fas fa-caret-right"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Edit" asp-route-certificationId="@Model.Id">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete" asp-route-certificationId="@Model.Id">
            <i class="fas fa-trash"></i>
        </a>
    </div>
</div>